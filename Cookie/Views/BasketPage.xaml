<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cookie.Views.BasketPage"
             Title="Basket">

    <StackLayout Padding="20">
        <Label Text="Basket Items" FontSize="Large" FontAttributes="Bold" HorizontalOptions="Center" Margin="0,0,0,20"/>

        <CollectionView ItemsSource="{Binding BasketItems}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Padding="10">
                        <Label Text="{Binding Name}" FontSize="Medium" />
                        <Label Text="{Binding Price, StringFormat='Price: ${0:F2}'}" FontSize="Medium" TextColor="Green" />
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button Text="Clear Basket"
                Clicked="OnClearBasketClicked"
                HorizontalOptions="FillAndExpand"
                BackgroundColor="Tomato"
                TextColor="White"
                Margin="0,20,0,0"/>
    </StackLayout>

</ContentPage>
