<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cookie.Views.PurchasePage"
             Title="Purchase">

    <CollectionView x:Name="dishesCollectionView"
                    SelectionMode="Single"
                    SelectionChanged="OnSelectionChanged">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <StackLayout Padding="10">
                    <Label Text="{Binding Name}" FontSize="Large" />
                    <Label Text="{Binding Description}" FontSize="Small" TextColor="Gray" />
                    <Label Text="{Binding Price, StringFormat='Price: ${0:F2}'}" FontSize="Small" TextColor="Green" />
                </StackLayout>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>

</ContentPage>
