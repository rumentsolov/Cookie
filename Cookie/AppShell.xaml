<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:Cookie.Views"
       x:Class="Cookie.AppShell"
       x:Name="appShell"
       Title="Cookie">

    <!-- Main tab bar navigation -->
    <TabBar>
        <Tab Title="Home" Icon="home.png">
            <ShellContent ContentTemplate="{DataTemplate local:HomePage}" />
        </Tab>
        <Tab Title="Menu" Icon="menu.png">
            <ShellContent ContentTemplate="{DataTemplate local:MenuPage}" />
        </Tab>
        <Tab Title="Contact" Icon="contact.png">
            <ShellContent ContentTemplate="{DataTemplate local:ContactUsPage}" />
        </Tab>
        <Tab Title="Account" Icon="account.png">
            <ShellContent ContentTemplate="{DataTemplate local:AccountPage}" />
        </Tab>
        <Tab Title="Basket" Icon="basket.png">
            <ShellContent ContentTemplate="{DataTemplate local:BasketPage}" />
        </Tab>
    </TabBar>

</Shell>
