<?xml version="1.0" encoding="UTF-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:Cookie.Views"
       x:Class="Cookie.AppShell"
       Title="Cookie">

    <FlyoutItem Title="Home" Icon="icon_home.png">
        <ShellContent ContentTemplate="{DataTemplate local:HomePage}" />
    </FlyoutItem>
    <FlyoutItem Title="Menu" Icon="icon_menu.png">
        <ShellContent ContentTemplate="{DataTemplate local:MenuPage}" />
    </FlyoutItem>
    <FlyoutItem Title="Basket" Icon="icon_about.png">
        <ShellContent ContentTemplate="{DataTemplate local:BasketPage}" />
    </FlyoutItem>
</Shell>
