<?xml version="1.0" encoding="UTF-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:Cookie.Views"
       x:Class="Cookie.AppShell"
       Title="Cookie">

    <!-- Main tab bar navigation -->
    <TabBar>
        <Tab Title="Home" Icon="home.png">
            <ShellContent ContentTemplate="{DataTemplate local:HomePage}" />
        </Tab>
        <Tab Title="Menu" Icon="menu.png">
            <ShellContent ContentTemplate="{DataTemplate local:MenuPage}" />
        </Tab>
        <Tab Title="Basket" Icon="basket.png">
            <ShellContent ContentTemplate="{DataTemplate local:BasketPage}" />
        </Tab>
    </TabBar>

    <!-- Flyout menu for Explore dropdown -->
    <FlyoutItem Title="Explore" Icon="explore.png">
        <!-- ShellSection for Menu -->
        <!-- ShellSection for sub-items -->
        <ShellSection Title="Sub Items">
            <ShellContent ContentTemplate="{DataTemplate local:MenuPage}" />
            <ShellContent ContentTemplate="{DataTemplate local:AboutPage}" />
            <ShellContent ContentTemplate="{DataTemplate local:PartnerWithUsPage}" />
            <ShellContent ContentTemplate="{DataTemplate local:GiftCardsPage}" />
        </ShellSection>
    </FlyoutItem>

</Shell>
